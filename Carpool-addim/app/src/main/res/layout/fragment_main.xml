<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#FFFACD"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <TextView
                        android:textColor="@color/textColor"
                        android:textSize="25dp"
                        android:text="@string/main_start"
                        android:id="@+id/main_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        />
                    <EditText
                        android:textColor="@color/textColor"
                        android:textColorHint="#AAAAAA"
                        android:hint="请输入..."
                        android:paddingLeft="10dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/main_start_input"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/main_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_right_img"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_weight="3">
                    <TextView
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_end"
                        android:textSize="25dp"
                        android:id="@+id/main_end"
                        android:layout_marginEnd="40dp"
                        />
                    <EditText
                        android:textColor="@color/textColor"
                        android:textColorHint="#AAAAAA"
                        android:hint="请输入..."
                        android:paddingLeft="10dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/main_end_input"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#FFFACD"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:textColor="@color/textColor"
                    android:id="@+id/main_time"
                    android:textSize="20dp"
                    android:text="@string/main_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:textColor="@color/textColor"
                    android:textColorHint="#AAAAAA"
                    android:hint="日期"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/main_day_input"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:background="@drawable/sure_button"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_sure"
            android:textSize="25dp"
            android:id="@+id/main_sure"
            />

    </LinearLayout>

</FrameLayout>
