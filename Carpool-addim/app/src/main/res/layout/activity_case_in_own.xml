<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="10dp"
        android:src="@drawable/head_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <TextView
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="22dp"
        android:id="@+id/case_in_name" android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>
    <TextView
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="22dp"
        android:id="@+id/case_in_phone" android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="踢出"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:background="#ff1111"
        android:id="@+id/case_in_out" android:layout_alignTop="@+id/case_in_name" android:layout_alignParentEnd="true"/>
</RelativeLayout>